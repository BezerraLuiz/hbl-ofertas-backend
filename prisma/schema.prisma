generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  mail     String @unique
  password String
}

model Products {
  id          String   @id @default(uuid())
  sku         String   @unique
  name        String
  price       Decimal  @db.Decimal(10, 2)
  description String
  imagePath   String
  createdAt   DateTime @default(now())
}
